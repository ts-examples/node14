{
  "extends": [
    "github>ts-templates/renovate-config"
  ],
  "force": {
    "constraints": {
      "node": "14.18.3",
      "npm": "6.x"
    }
  },
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "<15"
    },
    {
      "matchPackageNames": ["node"],
      "allowedVersions": "<15"
    },
    {
      "matchPackageNames": ["npm"],
      "allowedVersions": "<7"
    }
  ]
}
